<%# encoding: utf-8 %>

<p id="notice"><%= notice %></p>

<div class="jumbotron">
    <div class="container">

      <h1 style="text-align:center;">Vendez et Achetez vos timbres</h1>
      <h2 style="text-align:center;">en tout simplicit√©</h2>
      <p style="text-align:center;"><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
    </div>
</div>

<div class="center">
    <div class="row">
      <% @listings.each do |listing| %>

        <div class="col-md-3">
          <a href="<%= listing_path(listing) %>">

          <div class="thumbnail">
            <img src="<%= listing.image.url(:medium) %>" >

            <div class="caption">

                <h3><%= listing.name %></h3>
                <p> <%= listing.description %></p>
                <p> <%= number_to_currency(listing.price )%></p>
                <p> <%= "sold by #{listing.user.name}" %></p>

            </div>
          </div>
          </a>

        </div>
      <%end%>
    </div>
</div>


<br>
<% if user_signed_in?%>
<%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %>
<%end%>
<%= form_for(@listing, html:{ multipart: true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <h3><%= pluralize(@listing.errors.count, "erreurs") %> :</h3>


      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nom"%><br>
    <%= f.text_field :name , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description , size: "30x10", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix" %><br>
    <div class="input-group input-group-lg">

    <%= f.number_field :price, {step: '1', class: "form-control"} %><span class="input-group-addon">â‚¬</span>

    </div>
  </div>

    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image , class: "form-control"%>
    </div>


  <div class="actions">
    <%= f.submit "Publier mon article", class: "btn btn-primary" %>
  </div>
<% end %>


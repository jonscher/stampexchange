<div class="container">
  <div class="panel panel-default">
    <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Nom</th>
      <th class="center">Description</th>
      <th class="center">Prix</th>
      <th colspan="3"></th>
    </tr>


    <% @listings.each do |listing| %>
        <tr>
          <td class="center"><%= image_tag listing.image.url(:thumb) %></td>
          <td class="center"><%= listing.name %></td>
          <td class="center"><%= listing.description %></td>
          <td class="center"><%= listing.price %></td>

            <td colspan="4" align="center">


          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Action
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
             <li><%= link_to 'Modifier', edit_listing_path(listing), class:"btn btn-link" %></li>
              <li> <%= link_to 'Supprimer', listing, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-link" %></li>
              <li> <%= link_to 'Voir', listing, class:"btn btn-link" %></li>
            </ul>
          </div>
          </td>
        </tr>
        <%end%>
    </table>
</div>
</div>